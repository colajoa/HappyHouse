<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.happyhouse.dao.QnaDao">
    <insert id="insertQna" parameterType="QnaDto">
        <![CDATA[ 
        insert into post(title, author, content, created_at)
        values(#{title}, #{author}, #{content}, now())
        ]]>
    </insert>
    <select id="listQna" resultType="QnaDto">
        <![CDATA[ 
        select * from post
        ]]>
    </select>
    <select id="detailQna" resultType="QnaDto">
        <![CDATA[ 
        select * from post where id=#{id}
        ]]>
    </select>
    <update id="updateQna" parameterType="QnaDto">
        <![CDATA[ 
        update post
        set title=#{title}, content=#{content}
        where id=#{id}
        ]]>
    </update>
    <delete id="deleteQna" parameterType="int">
        <![CDATA[ 
        delete from post where id=#{id}
        ]]>
    </delete>
</mapper>